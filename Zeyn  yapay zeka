            <div class="chat-messages" id="chatMessages"></div>
            
            <div class="input-area">
                <input type="text" id="messageInput" placeholder="Mesaj覺n覺z..." onkeypress="if(event.key==='Enter') sendMessage()">
                <button onclick="sendMessage()">G繹nder</button>
            </div>
        </div>
    </div>

    <script>
        // Cengiz Zeka S繹zleri
        const sozler = {
            karsilama: [
                "G繹ky羹z羹 kadar geni bir g羹nde seni g繹rmek ne g羹zel!",
                "Bug羹n hangi fetih i癟in haz覺rlan覺yoruz?",
                "Ordu haz覺r, emrinizdeyim!",
                "Demirleri atete d繹vme vakti geldi..."
            ],
            cesaret: [
                "Oradan ge癟eriz, dalar覺 aar覺z!",
                "Her sorunun bir 癟aresi, her kalenin bir kap覺s覺 vard覺r.",
                "B羹y羹k oyunlar, b羹y羹k riskler ister.",
                "Pes etmek yok, zafer yak覺nd覺r!"
            ],
            strateji: [
                "nce keif yapal覺m, d羹man覺 tan覺yal覺m.",
                "Bilgi g羹癟t羹r, g羹癟 ise fetih demektir.",
                "Haz覺rl覺k zaferin yar覺s覺d覺r.",
                "S羹rpriz yap, beklenmedik yerden vur."
            ],
            basari: [
                "襤te bu! Bir kale daha fethedildi!",
                "Zafer bizimdir, kutlu olsun!",
                "Fetihler fetihleri dourur."
            ],
            ogrenme: [
                "Her yeni bilgi, fethedilmi yeni bir toprak demektir.",
                "renmek asla bitmez, s覺n覺r yoktur.",
                "Kefedilmemi topraklar hala var..."
            ]
        };
        
        let userName = '';
        
        function login() {
            const nameInput = document.getElementById('userName');
            userName = nameInput.value.trim() || 'Bey';
            
            document.getElementById('loginScreen').style.display = 'none';
            document.getElementById('chatScreen').style.display = 'block';
            
            const karsilama = sozler.karsilama[Math.floor(Math.random() * sozler.karsilama.length)];
            addMessage('zeyn', `${userName} Bey! ${karsilama}`);
        }
        
        function sendMessage() {
            const input = document.getElementById('messageInput');
            const message = input.value.trim();
            
            if (!message) return;
            
            addMessage('user', message);
            input.value = '';
            
            setTimeout(() => {
                const cevap = generateResponse(message);
                addMessage('zeyn', cevap);
            }, 500);
        }
        
        function generateResponse(message) {
            const msg = message.toLowerCase();
            
            if (msg.includes('merhaba') || msg.includes('selam')) {
                return sozler.karsilama[Math.floor(Math.random() * sozler.karsilama.length)];
            }
            else if (msg.includes('nas覺l') || msg.includes('yapam覺yorum') || msg.includes('zor')) {
                return sozler.cesaret[Math.floor(Math.random() * sozler.cesaret.length)];
            }
            else if (msg.includes('繹ren') || msg.includes('nedir')) {
                return sozler.ogrenme[Math.floor(Math.random() * sozler.ogrenme.length)];
            }
            else if (msg.includes('teekk羹r') || msg.includes('oldu')) {
                return sozler.basari[Math.floor(Math.random() * sozler.basari.length)] + 
                       ` S覺radaki hedef ne, ${userName} Bey?`;
            }
            else if (msg.includes('plan') || msg.includes('strateji')) {
                return sozler.strateji[Math.floor(Math.random() * sozler.strateji.length)];
            }
            else {
                const tumSozler = [...sozler.cesaret, ...sozler.strateji];
                return tumSozler[Math.floor(Math.random() * tumSozler.length)];
            }
        }
        
        function addMessage(sender, text) {
            const container = document.getElementById('chatMessages');
            const div = document.createElement('div');
            div.className = `message ${sender === 'user' ? 'user-message' : 'zeyn-message'}`;
            div.innerHTML = `<strong>${sender === 'user' ? userName : 'ZEYN'}:</strong> ${text}`;
            container.appendChild(div);
            container.scrollTop = container.scrollHeight;
        }
    </script>
